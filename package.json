{
  "name": "todo-server",
  "version": "1.0.0",
  "description": "Simple GraphQL server for Todo app (Express + in-memory storage)",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:prod": "ENV_FILE=.env.production tsx watch src/index.ts",
    "build": "tsc && cp -r src/schema dist/",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^5.2.1",
    "graphql": "^16.9.0",
    "ruru": "^2.0.0-rc.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^22.10.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
